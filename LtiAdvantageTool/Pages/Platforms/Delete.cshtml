@page
@using AdvantageTool.Utility
@model DeleteModel

@{
    ViewData["Title"] = "Platforms";
}

<div class="container-fluid">
    <h4>Delete Platform</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">
                    Platform Settings
                </h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(model => model.Platform.Name)</dt>
                        <dd>@Model.Platform.Name.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(model => model.Platform.Issuer)</dt>
                        <dd>@Model.Platform.Issuer.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(model => model.Platform.JwkSetUrl)</dt>
                        <dd>@Model.Platform.JwkSetUrl.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(model => model.Platform.AccessTokenUrl)</dt>
                        <dd>@Model.Platform.AccessTokenUrl.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(model => model.Platform.AuthorizeUrl)</dt>
                        <dd>@Model.Platform.AuthorizeUrl.IfMissingThen()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Platform.Id" />
        <input type="submit" value="Delete" class="btn btn-secondary" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>